[Unit]
Description=ACH Verification Service

[Service]
WorkingDirectory=<%= @installdir %>/avs/publish
ExecStart=/tmp/avs/publish/ACHAcctVerificationService
# Restart service after 10 seconds if the dotnet service crashes:
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=avs
User=root
Group=root
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://0.0.0.0:5000

[Install]
WantedBy=multi-user.target
